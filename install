#!/bin/bash
read -p "Do you want iMax to use .emacs.d directory or .imax (remember choosing .emacs.d will overwrite your current setup)? [1.emacs.d 2.imax]" choice
if [ $choice -eq 2 ]; then
    mkdir -p ${HOME}/.imax/lib
    cp -r ./lib/* ${HOME}/.imax/lib/
    cp -r imax-config.el ${HOME}/.imax/
    printf "#!/bin/bash\nemacs --title=imax -q -l ${HOME}/.imax/init.el &" > ./imax-bin
    sudo mv ./imax-bin /usr/bin/imax
    sudo chmod +x /usr/bin/imax
elif [ $choice -eq 1 ]; then
    rm -rf ${HOME}/.emacs.d
    mkdir ${HOME}/.emacs.d/
    cp -r * ${HOME}/.emacs.d/
    
fi
